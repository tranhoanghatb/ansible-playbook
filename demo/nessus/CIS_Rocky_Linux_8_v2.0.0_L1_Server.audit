         else
            echo \" - creating entry to lock \\\"autorun-never\\\"\"
            [ ! -d \"$l_kfd\"/locks ] &amp;&amp; echo \"creating directory $l_kfd/locks\" &amp;&amp; mkdir \"$l_kfd\"/locks
