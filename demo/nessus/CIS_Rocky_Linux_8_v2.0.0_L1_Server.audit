            perm_mask='0117'
            maxperm=\"$( printf '%o' $(( 0777 &amp; ~$perm_mask)) )\"
            l_rperms=\"ug-x,o-rwx\"
            l_auser=\"(root|SSSD)\"
            l_agroup=\"(root|SSSD)\"
            file_test_fix
