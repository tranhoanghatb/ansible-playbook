            perm_mask='0117'
            l_rperms=\"ug-x,o-rwx\"
            maxperm=\"$( printf '%o' $(( 0777 &amp; ~$perm_mask)) )\"
            l_auser=\"root\"
            l_agroup=\"(root|gdm|gdm3)\"
