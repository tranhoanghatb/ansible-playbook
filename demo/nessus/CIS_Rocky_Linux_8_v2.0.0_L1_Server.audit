            perm_mask='0137'
            maxperm=\"$( printf '%o' $(( 0777 &amp; ~$perm_mask)) )\"
            l_rperms=\"u-x,g-wx,o-rwx\"
            l_auser=\"root\"
            l_agroup=\"(root|systemd-journal)\"
            file_test_fix
            ;;
